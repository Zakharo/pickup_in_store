<?xml version="1.0"?>
<config>
    <modules>
        <Zakharo_Shipment>
            <version>1.0.0</version>
        </Zakharo_Shipment>
    </modules>
    <global>
        <models>
            <shipment>
                <class>Zakharo_Shipment_Model</class>
            </shipment>
        </models>
        <helpers>
            <shipment>
                <class>Zakharo_Shipment_Helper</class>
            </shipment>
        </helpers>
        <blocks>
            <shipment>
                <class>Zakharo_Shipment_Block</class>
            </shipment>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <shipment_layout module="shipment">
                    <file>shipment.xml</file>
                </shipment_layout>
            </updates>
        </layout>
    </frontend>
    <default>
        <carriers>
            <shipment>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <model>shipment/carrier</model>
                <title>StorePickup</title>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this
                    shipping method, please contact us.
                </specificerrmsg>
                <handling_type>F</handling_type>
            </shipment>
        </carriers>
    </default>
</config>